<div class="container border border-primary rounded fixed-top" id="login-form">
    <div class="row">
        <div class="offset-8 col-4">
            <div class="btn btn-outline-primary" id="back-to-shopping-from-login">
                Back To Shopping
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-6 offset-3">
            <h3>Login Form</h3>
            <form>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Your Username" id="login-username" value="" />
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Your Password" id="login-password" value="" />
                </div>
                <div class="btn btn-primary" id="send-login-button">
                    Log In
                </div>
            </form>
        </div>
    </div>
</div>
